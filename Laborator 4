// Online C++ compiler to run C++ program online
#include <iostream>
#include<string>
using namespace std;

class Crypto{
    private:
        string key;
        string alph = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
    public:
        Crypto(const string& key): key(key){}
        
        string encrypt(const string& plaintext){
            string result="";
            for(char ch : plaintext){
                if(isupper(ch)){
                    result += key[ch-'A'];
                }
                else if(islower(ch)){
                    result +=tolower(key[ch -'a']);
                }
                else{
                    result+=ch;
                }
            }
            return result;
        }
        
        
        string decrypt(const string& ciphertext){
            string result="";
            for(char ch : ciphertext){
                if(isupper(ch)){
                    result +=alph[key.find(ch)];
                }
                else if(islower(ch)){
                    result += tolower(alph[key.find(toupper(ch))]);
                }
                else {
                    result+=ch;
                }
            }
            return result;
        }
    
};

int main() {
    string key ="ZYXWVUTSRQPONMLKJIHGFEDCBA\t";
    Crypto cipher(key);
    string message="National Polytechnic Univercity Of Armenia";
    string encryptedMessage=cipher.encrypt(message);
    cout<<"Encrypted message: "<<encryptedMessage<<endl;
    
    string decMessage=cipher.decrypt(encryptedMessage);
    cout<<"Decrypted: "<<decMessage<<endl;
    return 0;
}
